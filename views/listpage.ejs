<!DOCTYPE html>
<html>
<head> <% include ./head %> </head>
<body>
<% include ./header %>

    <a class="btn" href="/additem">Add New Item</a>

    <div class="card">

    <table class="highlight">
        <tr>
            <th>Book Title</th>
            <th>Author</th>
            <th>Summary</th>
            <th>Date</th>
            <th>Site</th>
            <th>Added By</th>
            <th>Likes</th>
            <th>Actions</th>
        </tr>

        <% items.forEach(function(item){  %>
        <tr>
            <td><%= item.booktitle %></td>
            <td><%= item.author %></td>
            <td><%= item.summaryonbook %></td>
            <td><%= item.date %></td>
            <td><%= item.site%></td>
            <td><%= item.addedBy %></td>
            <td><a href="/like?book=<% item.booktitle %>" class="material-icon"><i>thumbs-up</i></a></td>
        </tr>
        <% }) %>
    </table>

    </div>

<% include ./footer %>
</body>
</html>
